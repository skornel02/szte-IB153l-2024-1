@page
@model Backend.Pages.Ingredients.IndexModel

@{
    ViewData["Title"] = "Ingredients";
}

<h1>Ingredient list</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IngredientEntity[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IngredientEntity[0].MaxStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IngredientEntity[0].Stock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.IngredientEntity) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="link-danger text-decoration-none">
                    <i class="bi bi-trash-fill"></i>
                </a>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="text-decoration-none">
                    <i class="bi bi-pencil-square"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
