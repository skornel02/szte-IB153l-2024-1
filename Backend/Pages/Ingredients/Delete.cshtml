@page
@model Backend.Pages.Ingredients.DeleteModel

@{
    ViewData["Title"] = Model.IngredientEntity.Name + " törlése";
}

<div class="row align-items-center">
    <div class="col-12 col-md-6">
        <h1>Alapanyag törlése</h1>
    </div>
    <div class="col-12 col-md">
        <h2>@Model.IngredientEntity.Name</h2>
    </div>
</div>

<hr />

<h3>Biztos vagy benne, hogy törlöd az alapanyagot?</h3>
<h3 class="text-muted">Ez a művelet nem vonható vissza!</h3>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IngredientEntity.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IngredientEntity.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IngredientEntity.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IngredientEntity.Stock)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IngredientEntity.MaxStock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IngredientEntity.MaxStock)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="IngredientEntity.Id" />
        <a asp-page="./Index" role="button" class="btn btn-outline-primary">Mégsem</a>
        <input type="submit" value="Törlés" class="btn btn-danger" />
        
    </form>
</div>
