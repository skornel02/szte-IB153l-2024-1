@page
@model DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductEntity.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductEntity.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductEntity.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductEntity.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductEntity.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductEntity.Price)
        </dd>
        <dt class="col-sm-2">
            Ingredients
        </dt>
        <dd class="col-sm-10">

            @foreach (var ingredient in Model.ProductEntity.Ingredients)
            {
                <li class="list-group-item">
                    <strong>Ingredient:</strong> <span>@ingredient.Ingredient.Name</span><br />
                    <strong>Quantity:</strong> <span>@ingredient.Quantity</span>
                </li>
            }

        </dd>



    </dl>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.ProductEntity.Id" class="btn btn-info">Edit</a>
    <a asp-page="./Index" class="btn btn-primary">Back to List</a>
</div>
