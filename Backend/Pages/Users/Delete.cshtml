@page
@model DeleteModel

@{
    ViewData["Title"] = "Delete user";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <h5 class="card-header">
                Are you sure you want to delete this user?
            </h5>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.UserEntity.EmailAddress)
                    </dt>
                    <dd class="col-sm-8 text-end">
                        @Html.DisplayFor(model => model.UserEntity.EmailAddress)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.UserEntity.LastSeen)
                    </dt>
                    <dd class="col-sm-8 text-end">
                        @Html.DisplayFor(model => model.UserEntity.LastSeen)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.UserEntity.Registered)
                    </dt>
                    <dd class="col-sm-8 text-end">
                        @Html.DisplayFor(model => model.UserEntity.Registered)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.UserEntity.Role)
                    </dt>
                    <dd class="col-sm-8 text-end">
                        @Html.DisplayFor(model => model.UserEntity.Role)
                    </dd>
                </dl>

                <form method="post" class="form-group my-2 d-flex justify-content-between">
                    <input type="hidden" asp-for="UserEntity.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>
